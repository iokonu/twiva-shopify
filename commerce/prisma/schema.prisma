generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Shop {
  id          String @id
  domain      String @unique
  accessToken String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  productCommissions    ProductCommission[]
  collectionCommissions CollectionCommission[]

  @@map("shops")
}

model ProductCommission {
  id            String   @id @default(uuid())
  shopId        String
  productId     String
  
  // Product details (stored here to avoid separate table)
  productTitle  String
  productHandle String
  productLink   String
  
  // Commission data
  commission    Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, productId])
  @@map("product_commissions")
}

model CollectionCommission {
  id              String   @id @default(uuid())
  shopId          String
  collectionId    String
  
  // Collection details (stored here to avoid separate table)
  collectionTitle String
  collectionHandle String?
  
  // Commission data
  commission      Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, collectionId])
  @@map("collection_commissions")
}