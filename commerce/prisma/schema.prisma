generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Shop {
  id          String @id
  domain      String @unique
  accessToken String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  productCommissions ProductCommission[]

  @@map("shops")
}

model ProductCommission {
  id            String   @id @default(uuid())
  shopId        String
  productId     String
  
  // Product details (stored here to avoid separate table)
  productTitle  String
  productHandle String
  productLink   String
  
  // Commission data
  commissionValue Float   // The numeric value (e.g., 7, 1500)
  commissionType  String @default("percentage") // "percentage" or "amount"
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, productId])
  @@map("product_commissions")
}

